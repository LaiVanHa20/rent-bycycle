<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AccountActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:background="#1874F3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/acc_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back" />
                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:text="Nguyen Van Minh"/>

                <ImageView
                    android:id="@+id/btn_logout"
                    android:layout_width="22dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="200dp"
                    android:src="@drawable/ic_logout" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_wallet"/>
                <TextView
                    android:id="@+id/acoount_sodu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#6BF318"
                    android:textSize="18dp"
                    android:text="50,000 vnd"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ln_naptien"
            android:layout_width="300dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:background="@drawable/card_white_bg"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Nạp tiền"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:src="@drawable/ic_next"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_white_bg"
            android:weightSum="3"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_clock" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Lịch sử"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:src="@drawable/ic_next"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ln_userprofile"
            android:layout_width="300dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_white_bg"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Thông tin cá nhân"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:src="@drawable/ic_next"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnContact"
            android:layout_width="300dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/card_white_bg"
            android:weightSum="3"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_contact"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="Liên hệ"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="100dp"
                android:src="@drawable/ic_next"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>